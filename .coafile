; -*- mode: conf -*-
[Python]
bears = PyFlakesBear,PythonPackageInitBear,PyUnusedCodeBear
files = mlxtk/**/*.py,examples/**/*.py
language = python

[PythonComplexity]
bears = RadonBear
enabled = False

[PythonDocumentation]
bears = PyDocStyleBear
files = mlxtk/**/*.py,examples/**/*.py
language = python
enabled = False

[PythonFilenames]
files = mlxtk/**/*.py,examples/**/*.py
file_naming_convention = snake

[PythonFormatting]
bears = PEP8Bear,PyImportSortBear,SpaceConsistencyBear
files = setup.py,mlxtk/**/*.py,examples/**/*.py
language = python

isort_multi_line_output = 3
order_imports_by_type = True
force_single_line_imports = False
use_spaces = True

[PythonPackaging]
bears = PyromaBear
files = setup.py
language = python
